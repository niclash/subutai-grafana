{
    "name": "${environmentName}",
    "description": "Grafana",
    "version": "5.3.1",
    "author": "https://github.com/niclash",
    "containers": [
        {
            "hostname": "${domainName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "3000",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP",
            "max-price": "100"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/niclash/subutai-grafana/archive/master.zip",
        "ansible-playbook": "ansible.yml",
        "extra-vars": [
        ],
        "groups": [
            {
                "name": "grafana",
                "hostnames": [
                    "${domainName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "grafana",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        },
        "database": {
            "description": "Database to be used for Grafana's own storage. This is not the datasources, but internal data needed in Grafana, such as panels, user settings and more.",
            "type": "enum",
            "default": "sqlite",
            "validation": "sqlite,postgres,mysql"
        }
    }
}
